NAME	= philo

SRCS	=	philo.c																\
			sources/utils.c														\
			sources/utils2.c													\
			sources/routine.c													\
			sources/routine_checks.c

BONUSSRCS	=

OBJS	= ${SRCS:.c=.o}

BONUSOBJS	= ${BONUSSRCS:.c=.o}

CC		= gcc

CFLAGS	= -Wall -Wextra -Werror -pthread

LIBS	=

RM		= rm -f

${NAME}:	${OBJS}
	${CC} ${CFLAGS} -o ${NAME} ${OBJS} ${LIBS}

.c.o:
		${CC} ${CFLAGS} -c $< -o ${<:.c=.o}

all:	${NAME}

bonus:

clean:
	 ${RM} ${OBJS} ${BONUSOBJS}

fclean:	clean
	${RM} ${NAME}

re:		fclean all

coffee:
